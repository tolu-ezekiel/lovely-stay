generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  github_id     Int       @unique
  name          String?
  username      String
  email         String?
  public_repos  Int
  location      String?
  languages     Language[]

  @@map("users")
}

model Language {
  id        Int    @id @default(autoincrement())
  language  String
  user_id   Int
  user      User   @relation(fields: [user_id], references: [id])

  @@unique([user_id, language])
  @@map("languages")
}
